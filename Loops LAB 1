//This program will compute the sum of an arithmetic series, 1+2+3+...+n,
//where the value of N is supplied by the user.

#include <stdio.h>
int main()

{
		int limit=0, sum=0,i=1;


		printf("This program computes the sum of integers 1 to N.");
		printf("\nPlease enter the value for N:");
		scanf("%d", &limit);

		while (i <= limit)
		{
			sum = sum + i;
			i = i + 1;
		
		}

		printf("The sum is %d\n", sum);
		getchar();
		getchar();
		

		

}
